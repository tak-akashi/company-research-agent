# EDINET API Configuration
# Get your API key from: https://api.edinet-fsa.go.jp/api/auth/index.aspx?mode=1
EDINET_API_KEY=your-api-key-here

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Text Analysis Provider (openai / google / anthropic / ollama)
LLM_PROVIDER=google

# Text Analysis Model (optional, uses provider default if not specified)
# LLM_MODEL=gemini-2.5-flash-preview-05-20

# Vision Provider for PDF parsing (optional, defaults to LLM_PROVIDER)
# LLM_VISION_PROVIDER=google

# Vision Model (optional, uses provider default if not specified)
# LLM_VISION_MODEL=gemini-2.5-flash-preview-05-20

# Common Settings
LLM_TIMEOUT=120
LLM_MAX_RETRIES=3
LLM_RPM_LIMIT=60

# =============================================================================
# API Keys (set according to your chosen provider)
# =============================================================================

# OpenAI API Key (required for LLM_PROVIDER=openai)
# OPENAI_API_KEY=sk-...

# Google API Key (required for LLM_PROVIDER=google)
GOOGLE_API_KEY=your-google-api-key-here

# Anthropic API Key (required for LLM_PROVIDER=anthropic)
# ANTHROPIC_API_KEY=sk-ant-...

# Ollama Base URL (required for LLM_PROVIDER=ollama)
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Database Configuration
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/company_research_agent
